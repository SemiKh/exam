{% extends 'front/base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block body %}

	<h1>Cr√©er une annonce</h1>
	<div class="col-lg-6 col-md-8 col-sm-12 mx-auto">
		{{ form_start(form)}}
		<div class="my-4">
			{{ form_row(form.title) }}
		</div>
		<div>
			{{ form_row(form.image) }}
		</div>
		<div class="my-4">
			{{ form_row(form.description) }}</div>
		<div>
			{{ form_row(form.price) }}</div>
		<div class="my-4">
			{{ form_row(form.producedYear) }}</div>
		<div>
			{{ form_row(form.model) }}</div>
		<div class="my-4">
			{{ form_row(form.mileage) }}</div>
		<button class="btn btn-primary mb-3" type="submit">
			Publier
		</button>
		{{ form_end(form) }}
	</div>


{% endblock %}
